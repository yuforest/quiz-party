<div class="container">
  <section class="my-4">
    <div class="d-flex justify-content-between mx-2 mb-2">
      <%= link_to admin_quizzes_path do %>
        <h2 class="display-4">クイズ一覧</h2>
      <% end %>
    </div>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="text-nowrap">内容</th>
            <th class="text-nowrap">ユーザー</th>
            <th class="text-nowrap">カテゴリ</th>
            <th class="text-nowrap">回答数</th>
            <th class="text-nowrap">閲覧数</th>
            <th class="text-nowrap">投稿日時</th>
            <th class="text-nowrap"></th>
          </tr>
        </thead>
        <tbody>
          <% @quizzes.each do |quiz| %>
            <tr>
              <td>
                <%= quiz.content %>
              </td>
              <td>
                <%= link_to admin_quizzes_path(user_id: quiz.user.id) do %>
                  <%= quiz.user.user_name %>
                <% end %>
              </td>
              <td>
                <%= quiz.category.name %>
              </td>
              <td><%= quiz.responses.count %></td>
              <td><%= quiz.impressionist_count %></td>
              <td><%= l quiz.created_at %></td>
              <td class="td-actions text-nowrap">
                <%= link_to "詳細", quiz_path(quiz) , class: "btn btn-info btn-icon btn-sm", target: :_blank %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @quizzes %>
    </div>
  </section>
</div>

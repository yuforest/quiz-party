<% set_meta_tags title: @quiz.user.user_name + "さんのクイズ | クイズパーティー",
                 description: @quiz.content,
                 og: {
                   title: @quiz.user.user_name + "さんのクイズ | クイズパーティー",
                   image: ogp_images_url(text: @quiz.content)
                 }
%>

<div class="container mt-4">
  <section class="my-4">
    <h2 class="display-4">
      <%#= @quiz.title %>
    </h2>
    <div class="d-flex align-items-center">
      <img src="/argon/assets/img/faces/team-4.jpg" class="rounded-circle w-70px">
      <p class="ml-2 mb-0">サイゼさん</p>
    </div>
    <div class="mt-3">
      <%= @quiz.content %>
    </div>
    <div class="mt-3 pt-2 border-top border-primary d-flex justify-content-between">
      <div>
        <i class="fas fa-eye mr-1"></i>
        <%= number_with_delimiter(@page_views) %>
      </div>
      <%= render "shared/components/sns_buttons", url: quiz_path(@quiz), content: @quiz.user.user_name + "さんのクイズ" %>
    </div>
    <div class="mt-3">
      <h4>回答する</h4>
      <div id="comment_box">
        <%= render "shared/components/answer_box", answer: @new_answer %>
      </div>
    </div>
    <div class="mt-3">
      <h4>みんなの回答</h4>
      <div id="comment_list">
        <%= render "shared/components/answer_list", answers: @answers %>
      </div>
    </div>
  </section>
</div>
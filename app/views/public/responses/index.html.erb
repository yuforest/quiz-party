<% set_meta_tags title: @quiz.user.user_name + "さんのクイズ | クイズパーティー",
                 description: @quiz.content,
                 og: {
                   title: @quiz.user.user_name + "さんのクイズ | クイズパーティー",
                   image: ogp_images_url(text: @quiz.content)
                 }
%>

<div class="container mt-4">
  <section class="my-4">
    <div class="d-flex align-items-center">
      <div class="thumb-img-wrapper">
        <%= image_tag(@quiz.user.user_image(size: :thumb)) %>
      </div>
      <p class="ml-2 mb-0"><%= @quiz.user.user_name %></p>
    <p class="mt-1"></p>
    </div>
    <div class="mt-3">
      <%= @quiz.content %>
    </div>
    <div class="mt-3 pt-2 border-top border-primary d-flex justify-content-between">
      <div>
        <i class="fas fa-eye mr-1"></i>
        <%= number_with_delimiter(@page_views) %>
      </div>
      <%= render "shared/components/sns_buttons", url: quiz_path(@quiz), content: @quiz.user.user_name + "さんのクイズ" %>
    </div>
    <div class="mt-3">
      <h3>みんなの回答</h3>
      <div class="d-flex">
        <p class="mr-3">回答者数: <%= Response.where(quiz_id: @quiz.id).count %></p>
        <p>正答率 <%= @quiz.correct_answer_rate %>%</p>
      </div>
      <div id="comment_list">
        <%= render "shared/components/response_list", responses: @responses %>
      </div>
    </div>
  </section>
</div>
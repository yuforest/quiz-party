<%= link_to user_path(quiz.user), class: "d-flex align-items-center" do %>
  <div class="thumb-img-wrapper">
    <%= image_tag(quiz.user.user_image(size: :thumb)) %>
  </div>
  <p class="ml-2 mb-0"><%= quiz.user.user_name %></p>
<% end %>
<div class="mt-3">
  <%= quiz.content %>
</div>
<% if quiz.image.present? %>
  <div class="mt-3">
    <%= image_tag(quiz.image.small.url) %>
  </div>
<% end %>
<div class="mt-3 pt-2 border-top border-primary d-flex justify-content-between">
  <div>
    <i class="fas fa-eye mr-1"></i>
    <%= number_with_delimiter(page_views) %>
  </div>
  <%= render "shared/components/sns_buttons", url: quiz_url(quiz), content: quiz.user.user_name + "さんのクイズ" %>
</div>
<% responses.each do |response| %>
  <div class="my-2">
    <% if response.is_correct? %>
      <%= image_tag("circle.png", size: "30x30") %>
    <% else %>
      <%= image_tag("times.png", size: "30x30") %>
    <% end %>
    <%= response.content %>(<%= response.name_or_annonymous %>さんの回答)
  </div>
<% end %>
<div class="mt-3">
  <%= paginate responses %>
</div>
